{
  "name": "cartrawler-assignment",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.8",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "axios": "^0.26.1",
    "dayjs": "^1.11.0",
    "framer-motion": "^6",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-query": "^3.34.19",
    "react-router-dom": "6",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^14.1.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/spec/**/*.[jt]s?(x)"
    ],
    "moduleNameMapper": {
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^components(.*)$": "<rootDir>/src/components$1"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
